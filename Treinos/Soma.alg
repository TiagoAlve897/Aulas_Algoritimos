      Escreval("Digite o Segundo numero")
      Leia(N2)
      Soma <- N1 + N2
      Escreval("-------------------------")
      Escreval("O RESULTADO DA SOMA E ",N1, " e ",n2," = ",Soma)

fimalgoritmo
